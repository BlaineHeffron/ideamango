    <input id="searchTextField" name="location" type="text">
</form>

<script>
$.getJSON('http://api.wipmania.com/jsonp?callback=?', function (data) {
  window.latitude = data.latitude;
  window.longitude = data.longitude;
});
var sw = new google.maps.LatLng((window.latitude - 5), (window.longitude - 15));
var ne = new google.maps.LatLng((window.latitude + 5), (window.longitude + 15));
var input = document.getElementById('searchTextField');
var bound = new google.maps.LatLngBounds(sw, ne);
var options = {
  bounds: bound,
  types: ['(regions)','(cities)']
};
autocomplete = new google.maps.places.Autocomplete(input, options);
</script>
